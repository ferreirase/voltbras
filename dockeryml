version: "3.1"
services:
  db:
    image: tutum/mongodb  
    container_name: db
    restart: always
    ports:
      - 27017:27017
    environment:
      MONGO_INITDB_DATABASE: ${DB_NAME}
      MONGO_INITDB_ROOT_USERNAME: ${DB_USER}
      MONGO_INITDB_ROOT_PASSWORD: ${DB_PASS}

  api:
    image: node:alpine
    container_name: api
    restart: always
    build: .
    env_file:
     - .env
    depends_on:
      - db
    ports:
      - 4000:4000
    volumes:
      - .:/usr/src/app
    working_dir: /usr/src/app
    command: yarn dev
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "5"